<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/colorSurfaceContainer"
    android:id="@+id/product_layout"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_login"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/name_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textColor="@color/Free_Speech_Blue"
                android:textSize="16sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/number_of_unit_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_below="@+id/name_products"/>

            <TextView
                android:id="@+id/unit_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gr "
                android:textColor="@color/black"
                android:textSize="10sp"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_below="@+id/name_products"
                android:layout_toRightOf="@+id/number_of_unit_product"/>

            <TextView
                android:id="@+id/container_type_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ Túi"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_below="@+id/name_products"
                android:layout_toRightOf="@+id/unit_product"/>

            <TextView
                android:id="@+id/cost_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá cả"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:ellipsize="end"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_below="@+id/number_of_unit_product"/>

            <Button
                android:id="@+id/btn_edit_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@+id/cost_products"/>

            <Button
                android:id="@+id/btn_delete_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorError"
                style="@style/Widget.Material3.Button"
                android:textAllCaps="false"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/btn_edit_product"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>