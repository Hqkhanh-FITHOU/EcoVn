<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:id="@+id/payment_layout">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_products"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:scaleType="centerInside"
                android:src="@drawable/logo_login"
                android:layout_gravity="right"
                app:shapeAppearanceOverlay="@style/Round.ImageView.2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/frame_above"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên sản phẩm"
                        android:textColor="@color/Free_Speech_Blue"
                        android:textSize="16sp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:id="@+id/tv_title_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá:"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:layout_below="@+id/name_products"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 vnd"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:ellipsize="end"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:layout_below="@+id/name_products"
                        android:layout_toRightOf="@+id/tv_title_price"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_minus_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/tv_minus_quantity"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_plus_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" + "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:layout_toRightOf="@id/tv_quantity"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>